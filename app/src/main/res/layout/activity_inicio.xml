<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cancha">


    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="99dp"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sbc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="169dp"
                        android:layout_height="99dp"
                        android:layout_marginLeft="10dp"
                        android:text="Informacion sbc"
                        android:textColor="@android:color/white"
                        android:textSize="28dp"
                        android:textStyle="italic" />

                    <Button
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="18dp"
                        android:backgroundTint="#4E863F"
                        android:hint="ir"
                        android:minHeight="32dp"
                        android:onClick="onClickSBC"
                        android:orientation="horizontal"



                        />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="99dp"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cartaslogo" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="169dp"
                    android:layout_height="match_parent"
                    android:text="Jugadores Populares"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="28dp"
                    android:textStyle="italic" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="18dp"
                    android:backgroundTint="#4E863F"
                    android:hint="ir"
                    android:minHeight="32dp"
                    android:onClick="onClickCartas"
                    android:orientation="horizontal"

                    />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>

    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="99dp"
        android:layout_margin="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/estadionacionla" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="169dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="Estadios"
                        android:textColor="@android:color/white"
                        android:textSize="28dp"
                        android:textStyle="italic" />

                    <Button
                        android:layout_width="71dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="18dp"
                        android:backgroundTint="#4E863F"
                        android:hint="ir"
                        android:minHeight="32dp"
                        android:onClick="onClickEstadio"


                        />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="201dp"
        android:layout_margin="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815">

        <VideoView
            android:id="@+id/video1"
            android:layout_width="400dp"
            android:layout_height="211dp"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>